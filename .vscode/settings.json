	// Syntax highlighting tried method
	"editor.tokenColorCustomizations": {
		"[Visual Studio Light - C++]": {
			"comments": {
				"foreground": "#8fd3fa",
				"fontStyle": ""
			},
			"functions": {
				"foreground": "#000000",
				"fontStyle": "bold"
			},
			"keywords": {
				"foreground": "#86044c",
				"fontStyle": "bold"
			},
			"numbers": {
				"foreground": "#0aa357",
				"fontStyle": ""
			},
			"strings": {
				"foreground": "#2d7fe9",
				"fontStyle": ""
			},
			"variables": {
				"foreground": "#000000",
				"fontStyle": ""
			},
			"types": {
				"foreground": "#0b5120",
				"fontStyle": ""
			}
		}
	},
	// Syntax highlighting experiments
	"editor.semanticTokenColorCustomizations": {
		"enabled": true,
		"[Visual Studio Light - C++]": {
			"enabled": false,
			"rules": {
				"function": {
					"foreground": "#000000",
					"fontStyle": "bold"
				},
				"comment": {
					"foreground": "#8fd3fa",
					"fontStyle": ""
				},
				"enumMember": {
					"foreground": "#0003ce",
					"fontStyle": ""
				},
				"keyword": {
					"foreground": "#86044c",
					"fontStyle": "bold"
				},
				"macro": {
					"foreground": "#a02203",
					"fontStyle": ""
				}
			}
		}
	},
	/*"C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: WebKit}",*/
	"C_Cpp.clang_format_fallbackStyle": "{UseTab: Always, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Stroustrup, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, AccessModifierOffset: -4, NamespaceIndentation: All, FixNamespaceComments: false}",
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.formatOnSave": true,
	"editor.wordWrap": "wordWrapColumn",
	"editor.wordWrapColumn": 160,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"C_Cpp.errorSquiggles": "Enabled",
	"C_Cpp.default.cppStandard": "c++17",
	"C_Cpp.default.cStandard": "c11"
}